@using GerenciamentoDeDespesas_2._1.Enum
@model Usuarios

@{
    ViewData["title"] = "Cadastro de Usuários";
}

@section Styles {
    <link rel="stylesheet" href="/css/formularioUsuarios.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/PopUp.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


@if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null || TempData["WarningMessage"] != null)
{
    <div class="modal-overlay" id="messageModal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeModal()">&times;</span>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="modal-message success">
                    <i class="bi bi-check-circle" style="color: black; mx-2"></i>

                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="modal-message error">
                    <i class="bi bi-x-circle" style="color: black; mx-2"></i>

                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["WarningMessage"] != null)
            {
                <div class="modal-message alert">
                    <i class="bi bi-exclamation-circle" style="color: black; mx-2"></i>

                    @TempData["WarningMessage"]
                </div>
            }
        </div>
    </div>
}


<div class="container">
    <div class="card-corpo">
        <h4>Cadastro de Usuários</h4>
    </div>
    <form asp-controller="Usuario" asp-action="Cadastrar" method="post" autocomplete="off">
        <form>
            <div class="form-group">
                <label for="nome"><i class="bi bi-person-badge-fill"></i></label>
                <input type="text" asp-for="Nome" id="nome" name="nome" placeholder="Digite seu nome completo">
                <span class="text-danger" asp-validation-for="Nome"></span>
            </div>
            <div class="form-group">
                <label for="username"><i class="bi bi-person-fill"></i></label>
                <input type="text" asp-for="UserName" id="username" name="username" placeholder="Digite um usuário">
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label for="nome"><i class="bi bi-person-badge-fill"></i>Perfil</i></label>
                <span class="text-danger" asp-validation-for="Perfil"></span>
                <select asp-for="Perfil" class="form-control">
                    <option value="0">Selecione</option>
                    <option value="@PerfilEnum.Admin">Administrador</option>
                    <option value="@PerfilEnum.Padrao">Padrão</option>
                </select>
            </div>
            <div class="form-group">
                <label for="email"><i class="bi bi-envelope-at-fill"></i></label>
                <input type="text" asp-for="Email" id="email" name="email" placeholder="Digite seu email">
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label for="senha"><i class="bi bi-key-fill"></i></label>
                <div class="password-container">
                    <input type="password" asp-for="Senha" id="senha" name="senha" placeholder="Digite uma senha">
                    <span class="eye-icon" id="togglePassword" onclick="togglePassword('senha', 'togglePassword')">
                        🙈
                    </span>
                </div>
                <span class="text-danger" asp-validation-for="Senha"></span>
            </div>
            <div class="form-group">
                <label for="confsenha"><i class="bi bi-key-fill"></i></label>
                <div class="password-container">
                    <input type="password" asp-for="ConfSenha" id="confsenha" name="confsenha" placeholder="Confirmar senha">
                    <span class="eye-icon" id="toggleConfPassword" onclick="togglePassword('confsenha', 'toggleConfPassword')">
                        🙈
                    </span>
                </div>
                <span class="text-danger" asp-validation-for="ConfSenha"></span>
            </div>
            <div class="button-group">
                <button class="btn">
                    <a class="link-voltar" type="button" asp-controller="Usuario" asp-action="Index"><i class="bi bi-back mx-2"></i>Voltar</a>
                </button>
                <button type="submit" class="btn"><i class="bi bi-person-add mx-2"></i>Cadastrar</button>
            </div>
        </form>
    </form>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>


