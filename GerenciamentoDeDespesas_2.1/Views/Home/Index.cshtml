@model List<Despesas>

@{
    ViewData["Title"] = "Pagina Inicial";
}


@section Styles {
    <link rel="stylesheet" href="/css/tabelas.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/Home.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
}



<main class="Main">

    <div class="card-corpo">
        <h1>Sistema de Gerenciamento de Despesas</h1>
    </div>
    <br />

    <section class="content">
        <!-- Resumo Geral -->
        <div class="summary">
            <h2>Resumo Financeiro</h2>
            <div class="summary-details">
                <div class="summary-card">
                    <p>Total Despesas</p>
                    <h3>R$ 4.500,00</h3>
                </div>
                <div class="summary-card">
                    <p>Despesas do Mês</p>
                    <h3>R$ 2.100,00</h3>
                </div>
                <div class="summary-card">
                    <p>Saldo Disponível</p>
                    <h3>R$ 3.500,00</h3>
                </div>
            </div>
        </div>

        <!-- Gráfico de Despesas -->
        <div class="expense-chart">
            <h2>Despesas por Categoria</h2>
            <canvas id="expenseChart" width="300" height="300"></canvas>
        </div>
        
        <div class="reminders">
            <h2>Lembretes de Pagamento</h2>
            <ul>
                <li>Conta de Luz - Vencimento em 20/10</li>
                <li>Internet - Vencimento em 25/10</li>
            </ul>
        </div>
    </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('expenseChart').getContext('2d');
    const expenseChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Moradia', 'Alimentação', 'Transporte', 'Lazer'],
            datasets: [{
                label: 'Despesas por Categoria',
                data: [1200, 800, 500, 300],
                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0'],
            }]
        }
    });
</script>