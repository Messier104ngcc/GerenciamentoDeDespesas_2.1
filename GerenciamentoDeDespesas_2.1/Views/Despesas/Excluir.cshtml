@model Despesas

@{
    ViewData["Title"] = "Detalhes da Despesa";
}

@section Styles {
    <link rel="stylesheet" href="/css/formularioDespesas.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/PopUp.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
}


<div class="card-form">
    <h2>Detalhes da Despesa</h2>

    <div class="form-group">
        <label>Paga:</label>
        <span>@Model.Paga</span>
    </div>

    <div class="form-group">
        <label>Despesa:</label>
        <span>@Model.Despesa</span>
    </div>

    <div class="form-group">
        <label>Observações:</label>
        <span>@Model.Observacao</span>
    </div>

    <div class="form-group">
        <label>Valor:</label>
        <span>@Model.Valor.ToString("C")</span> <!-- Formatação de moeda -->
    </div>

    <div class="form-group">
        <label>Vencimento:</label>
        <span>@Model.Vencimento.ToString("dd/MM/yyyy")</span> <!-- Formatação de data -->
    </div>

    <div class="form-actions">
        <button type="button" class="back">
            <a class="link" asp-controller="Despesas" asp-action="Index"><i class="bi bi-back mx-2"></i>Voltar</a>
        </button>

        <!-- Botão para excluir a despesa -->
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal">
            <i class="bi bi-trash mx-2"></i>Excluir
        </button>

        <!-- Modal de confirmação de exclusão -->
        <div class="modal fade" id="confirmDeleteModal" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Exclusão</h5>
                    </div>
                    <div class="modal-body">
                        Tem certeza que deseja excluir esta despesa?
                    </div>
                    <div class="modal-footer">
                        <form asp-controller="Despesas" asp-action="Excluir" method="post">
                            <input type="hidden" name="id" value="@Model.Id" /> <!-- Supondo que você tenha uma propriedade Id -->
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="bi bi-back mx-2"></i>Cancelar</button>
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash mx-2"></i>Excluir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



