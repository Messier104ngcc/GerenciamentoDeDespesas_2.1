@model Despesas


@{
    ViewData["title"] = "Cadastro de Despesas";
}

@section Styles {
    <link rel="stylesheet" href="/css/formularioDespesas.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/PopUp.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
}


@if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null || TempData["WarningMessage"] != null)
{
    <div class="modal-overlay" id="messageModal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeModal()">&times;</span>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="modal-message success">
                    <i class="bi bi-check-circle" style="color: black; mx-2"></i>

                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="modal-message error">
                    <i class="bi bi-x-circle" style="color: black; mx-2"></i>

                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["WarningMessage"] != null)
            {
                <div class="modal-message alert">
                    <i class="bi bi-exclamation-circle" style="color: black; mx-2"></i>

                    @TempData["WarningMessage"]
                </div>
            }
        </div>
    </div>
}


<div class="card-form">
    <h2>Cadastro de Despesas</h2>

    <form asp-controller="Despesas" asp-action="Cadastrar" method="post">

        <div class="form-group">
            <label for="despesa">Despesa</label>
            <input type="text" id="Despesa" asp-for="Despesa" required>
        </div>

        <div class="form-group">
            <label for="observacoes">Observações</label>
            <textarea typeof="" id="Observacoes" asp-for="Observacao"></textarea>
        </div>

        <div class="form-group">
            <label for="valor">Valor</label>
            <input type="number" id="Valor" asp-for="Valor" required>
        </div>

        <div class="form-group">
            <label for="vencimento">Vencimento</label>
            <input type="date" id="Vencimento" asp-for="Vencimento" required>
        </div>

        <div class="form-actions">
            <button type="submit" class="save"><i class="bi bi-wallet2 mx-2"></i>Salvar</button>
            <button type="button" class="back">
                <a class="link" asp-controller="Despesas" asp-action="Index"><i class="bi bi-back mx-2"></i>Voltar</a>
            </button>
        </div>
    </form>
</div>

